{
  "$schema": "http://schemas.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "cosmosDb": {
      "type": "object",
      "defaultValue": {
        "resourceGroupName": "tompostler",
        "name": "tompostler-free"
      }
    },
    "googleCredentials": {
      "type": "securestring"
    },
    "planName": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "siteName": {
      "type": "string",
      "defaultValue": "ns-tcp-wtf"
    },
    "sqlServerName": {
      "type": "string"
    },
    "sqlDatabaseName": {
      "type": "string",
      "defaultValue": "ns"
    },
    "sqlAdminUsername": {
      "type": "string",
      "defaultValue": "sqladmin"
    },
    "sqlAdminPassword": {
      "type": "securestring"
    }
  },
  "variables": {
    "cosmosDbId": "[resourceId(parameters('cosmosDb').resourceGroupName, 'Microsoft.DocumentDB/databaseAccounts/', parameters('cosmosDb').name)]",
    "sqlConnectionString": "[concat('Server=tcp:', parameters('sqlServerName'), environment().suffixes.sqlServerHostname, ',1433;Initial Catalog=', parameters('sqlDatabaseName'), ';Persist Security Info=False;User ID=', parameters('sqlAdminUsername'), ';Password=', parameters('sqlAdminPassword'), ';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2020-06-01",
      "name": "[concat(parameters('siteName'), '/appsettings')]",
      "properties": {
        "APPLICATIONINSIGHTS_CONNECTION_STRING": "[reference(resourceId('Microsoft.Insights/components', parameters('planName')), '2020-02-02').ConnectionString]",
        "ApplicationInsightsAgent_EXTENSION_VERSION": "~3",
        "CosmosDB__Endpoint": "[concat('https://', parameters('cosmosDb').name, '.documents.azure.com:443/')]",
        "CosmosDB__Key": "[listKeys(variables('cosmosDbId'), providers('Microsoft.DocumentDB','databaseAccounts').apiVersions[0]).primaryMasterKey]",
        "CosmosDB__DatabaseId": "shared",
        "CosmosDB__ContainerId": "nstcpwtf",
        "DOCKER_ENABLE_CI": "true",
        "DOCKER_REGISTRY_SERVER_PASSWORD": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', 'tomlatex'), '2019-05-01').passwords[0].value]",
        "DOCKER_REGISTRY_SERVER_URL": "https://tomlatex.azurecr.io",
        "DOCKER_REGISTRY_SERVER_USERNAME": "tomlatex",
        "Google__Credentials": "[parameters('googleCredentials')]",
        "Sql__ConnectionString": "[variables('sqlConnectionString')]",
        "WEBSITE_HTTPLOGGING_RETENTION_DAYS": "7",
        "WEBSITES_ENABLE_APP_SERVICE_STORAGE": "false"
      }
    }
  ]
}